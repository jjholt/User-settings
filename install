echo "Enable RPM Fusion"
sudo dnf install https://mirrors.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm https://mirrors.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm && echo "OK" && sleep 1

echo "Basic setup"
sudo dnf install -y zsh nvim polybar i3-gaps rofi polybar arandr network-manager-applet blueman rofi-devel qalculate feh neofetch xdotool tmux
chsh -s $(which zsh)
sh -c "$(wget -O- https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
cp zsh-custom/* ~/.oh-my-zsh/ && echo "Copied custom aliases"

sudo dnf install -y octave octave-signal octave-statistics octave-symbolic ktechlab
sudo dnf install -y vlc transmission steam pavucontrol mpd ncmpcpp && echo "OK"

sudo dnf install -y xset bdftopcf
git clone https://github.com/stark/siji&& ./siji/install.sh -d ~/.fonts && rm -r siji/ && echo "OK" 

echo "Audio setup"
sudo dnf install -y pavucontrol mpd ncmpcpp && echo "OK" 

echo "Tools"
sudo dnf install -y texlive-scheme-full cargo npm blender gimp inkscape shotwell darktable vim ImageMagick
curl https://sh.rustup.rs -sSf | sh

echo "Copying user bin/"
mkdir -p ~/bin && cp bin/* ~/bin/ && echo "OK" 

echo "Preparing tmux"
mv tmux/conf ~/.tmux.conf && cp tmux/* ~/.local/bin/ && echo "OK"

echo "Moving dot files into .config"
mkdir -p ~/.config && cp -r dotfiles/* ~/.config/ && echo "OK" 

sudo hostnamectl set-hostname "Desktop"
ln /mnt/Media/Music ~/Music
